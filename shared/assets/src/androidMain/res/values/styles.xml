<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LeagueTextAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?leagueTextColor</item>
    </style>

    <style name="LeagueTextAppearance.Header">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LeagueTextAppearance.Accent">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LeagueTextAppearance.Title">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LeagueTextAppearance.Subhead">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?leagueTextColorSecondary</item>
    </style>
</resources>