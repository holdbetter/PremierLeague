<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LeagueTheme.Overlay" />

    <style name="LeagueTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- platform provided attributes -->
        <item name="android:windowBackground">?leagueBackground</item>
        <item name="android:colorBackground">?leagueBackground</item>
        <item name="android:textColorPrimary">?leagueTextColor</item>
        <item name="android:textColorSecondary">?leagueTextColorSecondary</item>
        <item name="colorControlHighlight">?leagueSeparator</item>

        <!-- application provided attributes -->
        <item name="leagueTextColor">@color/leagueTextColor</item>
        <item name="leagueTextColorInverse">@color/leagueTextColorInverse</item>
        <item name="leagueTextColorSecondary">@color/leagueTextColorSecondary</item>
        <item name="leagueBackground">@color/leagueBackground</item>
        <item name="leagueSeparator">@color/leagueSeparator</item>

    </style>
</resources>